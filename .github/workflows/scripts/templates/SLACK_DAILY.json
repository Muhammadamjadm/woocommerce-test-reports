{
  "blocks": [
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": ":newspaper:  Daily Smoke Test Report  :newspaper:"
      }
    },
    {
      "type": "context",
      "elements": [
        {
          "text": "*$DATE* | Daily smoke test on trunk.",
          "type": "mrkdwn"
        }
      ]
    },
    {
      "type": "divider"
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "Link to the workflow run logs"
      },
      "accessory": {
        "type": "button",
        "text": {
          "type": "plain_text",
          "text": "Workflow run :sonic-run:",
          "emoji": true
        },
        "value": "button_workflow_run",
        "url": "https://github.com/woocommerce/woocommerce/actions/runs/$RUN_ID",
        "action_id": "button-action"
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": " :alphabet-white-hash: *Commit message* :alphabet-white-hash:"
      }
    },
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": "This is the latest commit message in `trunk` when the Daily Smoke Test was triggered. "
        }
      ]
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "```$COMMIT_MESSAGE```"
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": ":api: *API Test Report Summary* :api:"
      },
      "accessory": {
        "type": "button",
        "text": {
          "type": "plain_text",
          "text": "View full report ",
          "emoji": true
        },
        "value": "button_api",
        "url": "https://woocommerce.github.io/woocommerce-test-reports/daily/api",
        "action_id": "button-action"
      }
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "• passed: $PASSED_API\n • failed: $FAILED_API\n• skipped: $SKIPPED_API\n• broken: $BROKEN_API\n• unknown: $UNKNOWN_API"
      }
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "_Total number of tests: *$TOTAL_API*_\n_Duration: *$DURATION_API*_"
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": ":playwright: *E2E Test Report Summary* :playwright:"
