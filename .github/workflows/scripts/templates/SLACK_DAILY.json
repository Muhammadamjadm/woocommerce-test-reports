      "accessory": {
        "type": "button",
        "text": {
          "type": "plain_text",
          "text": "View full report",
          "emoji": true
        },
        "value": "button_e2e",
        "url": "https://woocommerce.github.io/woocommerce-test-reports/daily/e2e",
        "action_id": "button-action"
      }
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "• passed: TBC\n • failed: TBC\n• skipped: TBC\n• broken: TBC\n• unknown: TBC"
